generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  content     String
  createdAt   DateTime  @default(now())
  comments    Comment[]
}

model Comment {
  id     Int    @id @default(autoincrement())
  author String
  text   String
  post   Post   @relation(fields: [postId], references: [id])
  postId Int
}
